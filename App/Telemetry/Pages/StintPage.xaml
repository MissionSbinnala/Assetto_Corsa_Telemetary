<Page x:Class="Telemetry.Pages.StintPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Telemetry.Pages"
      mc:Ignorable="d" 
      
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      
      
      xmlns:cc="clr-namespace:Telemetry.ContentControls"
      xmlns:lib="clr-namespace:SlickLibrary;assembly=SlickLibrary"
      xmlns:converter="clr-namespace:Telemetry.Converter"
      xmlns:uc="clr-namespace:Telemetry.UserControls"
      
      xmlns:viewmodel="clr-namespace:Telemetry.ViewModel" xmlns:ScottPlot1="http://schemas.scottplot.net/2008/xaml/presentation"
      d:DataContext="{d:DesignInstance Type=viewmodel:StintPageViewModel}"
      
      d:DesignHeight="450" d:DesignWidth="800" x:Name="page"
      Title="StintPage">

    <Page.Resources>
        <converter:CalcConverter x:Key="Calc"/>
    </Page.Resources>

    <Grid ClipToBounds="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TabControl Grid.RowSpan="2" Visibility="Visible">
            <TabItem Header="Pedals" x:Name="PedalTab">
                <lvc:CartesianChart ZoomMode="X" Series="{Binding Pedals}" TooltipPosition="Hidden" FindingStrategy="CompareOnlyX"/>
            </TabItem>
            <TabItem Header="TyreWear"  x:Name="WearTab">
                <lvc:CartesianChart ZoomMode="X" Series="{Binding Wears}" TooltipPosition="Hidden" FindingStrategy="CompareOnlyX"/>
            </TabItem>
            <TabItem Header="Tyres" x:Name="TyresTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelFL}" Grid.Row="0" Grid.Column="0" XAxes="{Binding XAxis}"/>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelFR}" Grid.Row="0" Grid.Column="1" XAxes="{Binding XAxis}"/>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelRL}" Grid.Row="1" Grid.Column="0" XAxes="{Binding XAxis}"/>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelRR}" Grid.Row="1" Grid.Column="1" XAxes="{Binding XAxis}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Wheels"  x:Name="WheelsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelFL}" Grid.Row="0" Grid.Column="0" XAxes="{Binding XAxis}"/>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelFR}" Grid.Row="0" Grid.Column="1" XAxes="{Binding XAxis}"/>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelRL}" Grid.Row="1" Grid.Column="0" XAxes="{Binding XAxis}"/>
                    <lvc:CartesianChart ZoomMode="X" Padding="2"  Series="{Binding WheelRR}" Grid.Row="1" Grid.Column="1" XAxes="{Binding XAxis}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <lib:SidePanel x:Name="StintSide" Grid.Column="1" FromRight="True" Grid.RowSpan="2" Grid.ColumnSpan="3" Panel.ZIndex="10" ExpandWidth="400">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Height="{Binding ActualHeight,ElementName=page,Converter={StaticResource Calc},ConverterParameter=-50}">
                <StackPanel>
                    <Grid>
                        <Canvas Margin="13,13,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Grid.Column="0"
                                    Width="24"
                                    Height="24" Panel.ZIndex="1">
                            <Path Stroke="Gray"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      Data="M 4 12 L 10 18 L 20 6"/>
                        </Canvas>
                        <cc:SelectExpander BorderBrush="Black" Margin="50,0,0,0" Header="Track">
                            <ItemsControl ItemsSource="{Binding Tracks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <lib:IconButton ButtonContent="{Binding DisplayName}" Command="{Binding DataContext.GetCar,ElementName=page}" CommandParameter="{Binding }"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </cc:SelectExpander>
                    </Grid>
                    <Grid>
                        <Canvas Margin="13,13,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Grid.Column="0"
                                    Width="24"
                                    Height="24" Panel.ZIndex="1">
                            <Path Stroke="Gray"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      Data="M 4 12 L 10 18 L 20 6"/>
                        </Canvas>
                        <cc:SelectExpander BorderBrush="Black" Margin="50,0,0,0" Header="Car">
                            <ItemsControl ItemsSource="{Binding Cars}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <lib:IconButton ButtonContent="{Binding DisplayName}" Command="{Binding DataContext.GetStint,ElementName=page}" CommandParameter="{Binding }"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </cc:SelectExpander>
                    </Grid>
                    <Grid>
                        <Canvas Margin="13,13,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Grid.Column="0"
                                    Width="24"
                                    Height="24" Panel.ZIndex="1">
                            <Path Stroke="Gray"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      Data="M 4 12 L 10 18 L 20 6"/>
                        </Canvas>
                        <cc:SelectExpander BorderBrush="Black" Margin="50,0,0,0" Header="Stint">
                            <ItemsControl ItemsSource="{Binding Stints}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <lib:IconButton ButtonContent="{Binding DisplayName}" Command="{Binding DataContext.LoadStint,ElementName=page}" CommandParameter="{Binding }"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </cc:SelectExpander>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </lib:SidePanel>
    </Grid>
</Page>