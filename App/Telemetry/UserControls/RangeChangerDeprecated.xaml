<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telemetry.UserControls"
             xmlns:Converter="clr-namespace:Telemetry.Converter"
             xmlns:vw="clr-namespace:Telemetry.ViewModel"
             x:Class="Telemetry.UserControls.RangeChangerDeprecated"
             mc:Ignorable="d" 
    
             d:DataContext="{d:DesignInstance Type=vw:MainViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Converter:PercentageConverter x:Key="PercentageConverter"/>
    </UserControl.Resources>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DecreaseButton" Grid.Column="0"
                    Width="{Binding 
                       Converter={StaticResource PercentageConverter}, 
                       ElementName=grid, 
                       Path=ActualWidth, 
                       ConverterParameter=0.125}"
                    Height="{Binding 
                       Converter={StaticResource PercentageConverter}, 
                       ElementName=DecreaseButton, 
                       Path=Width, 
                       ConverterParameter=0.5}"
                    Command="{Binding DecreaseRange}"
                    Background="AliceBlue" MinHeight="25" MinWidth="50"/>
        <Label x:Name="RangeDisplay" Grid.Column="1" Content="{Binding Range}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="IncreaseButton" Grid.Column="2"
                    Width="{Binding 
                       Converter={StaticResource PercentageConverter}, 
                       ElementName=grid, 
                       Path=ActualWidth, 
                       ConverterParameter=0.125}"
                    Height="{Binding 
                       Converter={StaticResource PercentageConverter}, 
                       ElementName=IncreaseButton, 
                       Path=Width, 
                       ConverterParameter=0.5}"
                    Command="{Binding IncreaseRange}"
                    Background="AliceBlue" MinHeight="25" MinWidth="50"
               />
    </Grid>
</UserControl>
