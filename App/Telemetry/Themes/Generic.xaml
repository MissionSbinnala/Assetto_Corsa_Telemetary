<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:Telemetry.ContentControls"
                    xmlns:local="clr-namespace:Telemetry"
                    xmlns:ui="http://schemas.modernwpf.com/2019"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:converter="clr-namespace:Telemetry.Converter"
                    >
    <ResourceDictionary.MergedDictionaries>
        <ui:ThemeResources />
        <ui:XamlControlsResources />

        <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Cyan" SecondaryColor="Lime" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.LightBlue.xaml" />


        <!-- Other merged dictionaries here -->
    </ResourceDictionary.MergedDictionaries>

    <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    
    <Style TargetType="{x:Type cc:SelectExpander}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type cc:SelectExpander}">
                    <Border Margin="4,4,4,0" Padding="5" BorderThickness="5" CornerRadius="{TemplateBinding CornerRadius}" Background="{TemplateBinding Background}">
                        <Expander Header="{TemplateBinding Header}" IsExpanded="True" Background="{TemplateBinding Background}">
                        <StackPanel>
                            <Button Padding="24,0,24,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="40"
                                    Style="{StaticResource MaterialDesignPaperButton}"
                                    Command="{Binding DataContext.SelectAll, ElementName=MW}"
                                    CommandParameter="{Binding}"
                                    Content="Select All"
                                    />
                            <ItemsControl ItemsSource="{TemplateBinding LineSource}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="64"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.ColumnSpan="2"
                                                    Padding="24,0,24,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    HorizontalContentAlignment="Left"
                                                    MinHeight="40"
                                                    Style="{StaticResource MaterialDesignPaperButton}"
                                                    Cursor="Hand"
                                                    Content="{Binding Name}"
                                                    Command="{Binding DataContext.ChangeVisiblity, ElementName=MW}"
                                                    CommandParameter="{Binding}"
                                                    />
                                            <Canvas Grid.Column="1"
                                                    Width="24"
                                                    Height="24"
                                                    Visibility="{Binding IsVisible, 
                                                    Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Path Stroke="Gray"
                                                      StrokeThickness="2"
                                                      StrokeLineJoin="Round"
                                                      Data="M 4 12 L 10 18 L 20 6"/>
                                            </Canvas>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Expander>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>